@model Proyecto_Tickets.INCIDENTE

@{
    ViewBag.Title = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class=" card-all">

        <div class="card-header text-center">

            <h2>Respuesta al ticket</h2>

        </div>

        <div class="card-body ">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.ID_INCIDENTE)

        <div hidden>
            @Html.DropDownList("ID_USUARIO", null, htmlAttributes: new { @class = "form-control" })
            @Html.DropDownList("ID_CATEGORIA", null, htmlAttributes: new { @class = "form-control" })
            @Html.DropDownList("ID_PRIORIDAD", null, htmlAttributes: new { @class = "form-control" })
          
            @Html.DropDownList("ID_ORIGEN", null, htmlAttributes: new { @class = "form-control" })
            @Html.EditorFor(model => model.NOMBRE, new { htmlAttributes = new { @class = "form-control" } })
            @Html.EditorFor(model => model.DESCRIPCION, new { htmlAttributes = new { @class = "form-control" } })
            @Html.EditorFor(model => model.FECHA_CREACION, new { htmlAttributes = new { @class = "form-control" } })
            
        </div>
        

            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label>@Html.DisplayName("Asunto") </label>
                        <div class="">
                            @Html.DisplayFor(model => model.NOMBRE)
                        </div>

                    </div>
                </div>

                <div class="col-md-4">
                    <div class="form-group">
                        <label> @Html.DisplayName("Usuario") </label>
                        <div>
                            @Html.DisplayFor(model => model.USUARIO.NOMBRE)
                        </div>

                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label>@Html.DisplayName("Origen") </label>
                        <div>
                            @Html.DisplayFor(model => model.CANAL_ORIGEN.NOMBRE_ORIGEN)
                        </div>
                    </div>
                </div>

            </div>

            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label> @Html.DisplayName("Creación") </label>
                        <div>
                            @Html.DisplayFor(model => model.FECHA_CREACION)
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label> </label>
                        <div>
                           
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="form-group">
                        <label>@Html.DisplayName("Duración") </label>
                        <div>
                            @Html.DisplayFor(model => model.DURACION)
                        </div>
                    </div>
                </div>


            </div>

            <div class="row">

                <div class="col-md-4">
                    <div class="form-group">
                        <label> @Html.DisplayName("Categoria")</label>
                        <div>
                            @Html.DisplayFor(model => model.CATEGORIA.NOMBRE_CATEGORIA)
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label>   @Html.DisplayName("Prioridad") </label>
                        <div>
                            @Html.DisplayFor(model => model.PRIORIDAD.NOMBRE_PRIORIDAD)
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label></label>
                        <div>
                           
                        </div>
                    </div>
                </div>

            </div>



            <br />
            <div class="row ">
                <div class="col-md-10 ">
                    <div class="form-group">
                        <label>@Html.DisplayName("Descripcion") </label>
                        <div>
                            @Html.DisplayFor(model => model.DESCRIPCION)
                        </div>
                    </div>
                </div>

            </div>
            <hr />
            <div class="row ">
                <div class="col-md-12 ">
                    <div class="form-group">
                        <label> @Html.DisplayName("Respuesta") </label>
                        <div>
                            @Html.TextAreaFor(model => model.MOTIVO_CIERRE, new { @rows = "6", @cols = "160" })
                            @Html.ValidationMessageFor(model => model.MOTIVO_CIERRE, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <label> @Html.LabelFor(model => model.FECHA_ACTUALIZACION, "Fecha cierre")</label>
                    <div>
                        @Html.EditorFor(model => model.FECHA_ACTUALIZACION, new { htmlAttributes = new { @class = "form-control" } })
                       
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="form-group">
                    <label> @Html.LabelFor(model => model.DURACION, "Duración", htmlAttributes: new { @class = "control-label col-md-2" }) </label>
                    <div>
                        @Html.EditorFor(model => model.DURACION, new { htmlAttributes = new { @class = "form-control " } })
                      
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="form-group">
                    <label> @Html.LabelFor(model => model.ID_ESTADO, "ESTADO", htmlAttributes: new { @class = "control-label col-md-2" })</label>
                    <div>
                        @Html.DropDownList("ID_ESTADO", null, htmlAttributes: new { @class = "form-control" })
                      
                    </div>
                </div>
            </div>
        </div>

            <!--
   

    <div class="form-group">
       
        <div class="col-md-10">
           
        </div>
    </div>
    -->


            <div class="form-group">



            </div>
            <div class="pull-right">

                <input type="submit" value="Save" class="btn btn-primary" /> |
                <button class="btn btn-default "> @Html.ActionLink("Volver a los tickets", "Index")</button>


            </div>
        </div>



    </div>

}
